<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@android:color/transparent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_linear_layout_home_wallet_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/imageButton_home_wallet_back_arrow"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="left"
                    android:background="@drawable/image_selector"
                    android:src="@drawable/arrow_back_circle_outline"
                    app:tint="@color/colorCommon6"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/center_container">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:id="@+id/linear_layout_home_set_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_home_set_wallet_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorCommon6"/>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:alpha="0.2"
                            android:background="@drawable/line_2_shape" />

                        <TextView
                            android:id="@+id/textView_home_set_wallet_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:textSize="16dp"/>

                        <TextView
                            android:id="@+id/textView_home_set_wallet_password_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundMode="outline"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:hintAnimationEnabled="true"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="@color/colorEye"
                            app:passwordToggleDrawable="@drawable/show_password_selector">

                            <EditText
                                android:id="@+id/editText_home_set_wallet_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|left"
                                android:layout_weight="1"
                                android:inputType="textPassword"
                                android:hint="@string/home_set_wallet_password_description"
                                android:maxLines="1"
                                android:maxLength="100"
                                android:background="@drawable/text_input_selector"  />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/textView_home_set_wallet_retype_password_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textSize="16dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundMode="outline"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:hintAnimationEnabled="true"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="@color/colorEye"
                            app:passwordToggleDrawable="@drawable/show_password_selector">

                            <EditText
                                android:id="@+id/editText_home_set_wallet_retype_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|left"
                                android:layout_weight="1"
                                android:inputType="textPassword"
                                android:hint="@string/home_set_wallet_retype_password_description"
                                android:maxLines="1"
                                android:maxLength="100"
                                android:background="@drawable/text_input_selector"  />

                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/button_home_set_wallet_next"
                            android:background="@drawable/button_green_selector"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_vertical|right"
                            android:padding="15dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorCommon7" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_layout_home_create_restore_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_layout_home_set_wallet"
                        android:gravity="center_horizontal|center_vertical"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_home_create_restore_wallet_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorCommon6"/>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:alpha="0.2"
                            android:background="@drawable/line_2_shape" />

                        <TextView
                            android:id="@+id/textView_home_create_restore_wallet_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:textSize="16dp" />

                        <RadioGroup
                            android:id="@+id/radioGroup_home_create_restore_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/radioButton_home_create_restore_wallet_1"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginBottom="2dp"
                                android:alpha="0.6"
                                android:textAppearance="@style/regular_text" />

                            <RadioButton
                                android:id="@+id/radioButton_home_create_restore_wallet_2"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginBottom="2dp"
                                android:alpha="0.6"
                                android:textAppearance="@style/regular_text" />

                            <RadioButton
                                android:id="@+id/radioButton_home_create_restore_wallet_3"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginBottom="2dp"
                                android:alpha="0.6"
                                android:textAppearance="@style/regular_text" />

                        </RadioGroup>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:alpha="0.2"
                            android:background="@drawable/line_2_shape" />

                        <Button
                            android:id="@+id/button_home_create_restore_wallet_next"
                            android:background="@drawable/button_green_selector"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:padding="5dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorCommon7" />

                    </LinearLayout>



                </RelativeLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_loader_home_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_alignParentBottom="true"
                android:indeterminate="true"
                android:visibility="gone"
                android:max="100"
                android:progress="0"
                android:background="@android:color/transparent"
                android:indeterminateDrawable="@drawable/progress" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>